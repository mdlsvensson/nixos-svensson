Config { overrideRedirect = False
       , font     = "Iosevka Nerd Font Bold 10"
       , bgColor  = "#0F1419"
       , fgColor  = "#E6E1CF"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Weather "EGPF"
                        [ "-t", "<weather> <tempC>°C"
                        , "-L", "0"
                        , "-H", "25"
                        , "--low"   , "lightblue"
                        , "--normal", "#f8f8f2"
                        , "--high"  , "red"
                        ] 36000
                    , Run Cpu
                        [ "-t", "<total>%"
                        , "-L", "3"
                        , "-H", "50"
                        , "--high"  , "red"
                        , "--normal", "green"
                        ] 10
                    , Run Alsa "default" "Master"
                        [ "-t", "<volumestatus>"
                        , "--suffix"  , "True"
                        , "--"
                        , "--on", ""
                        , "--off", ""
                        , "--highs", "<fc=#8be9fd>󰕾</fc> "
                        , "--mediums", "<fc=#8be9fd>󰖀</fc> "
                        , "--lows", "<fc=#8be9fd>󰕿</fc> "
                        ]
                    , Run Memory [ "-t", "<used> Gb", "--", "--scale", "1024"] 10
                    , Run Date "%a %Y-%m-%d <fc=#8be9fd>%H:%M</fc>" "date" 10
                    , Run XMonadLog
                    ]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %alsa:default:Master% |  %cpu% | 󰍛 %memory% | %EGPF% | %date% "
       }
